{
  "name": "customizer",
	"displayName": "The Customizer",
	"repository": {
		"type": "git",
		"url": "https://github.com/ananth243/Templating"
	},
	"publisher": "AnanthRaghav",
	"description": "An extension where you can create custom snippets of code",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.64.1"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
        "onCommand:templating.createSnippet",
		"onCommand:templating.deleteSnippet"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "javascript",
				"path": "./javascript.json"
			},
			{
				"language": "typescript",
				"path": "./typescript.json"
			},
			{
				"language": "python",
				"path": "./python.json"
			},
			{
				"language": "css",
				"path": "./css.json"
			}
		],
		"commands": [
			{
				"command": "templating.deleteSnippet",
				"title": "Delete Snippet"
			},
			{
				"command": "templating.createSnippet",
				"title": "Create Snippet"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.1",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}
